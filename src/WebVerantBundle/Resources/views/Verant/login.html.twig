    <section class="page-header dark">
        <div class="container">

            <h1>Registro</h1>

        </div>
    </section>
    <!-- /PAGE HEADER -->

    <!-- -->
    <section>
        <div class="container">
            {% for flashMessage in app.session.flashbag.get('mensaje') %}
                <div class="alert alert-mini alert-danger margin-bottom-30">
                    <span class="alert-success">
                        {{ flashMessage }}
                        </br>
                    </span>
                </div>
            {% endfor %}
            <div class="row">

                <!-- REGISTER -->
                <div class="col-md-8 col-sm-7">

                    <div class="">
                        <ul class="nav nav-tabs nav-justified" role="tablist">
                            <li role="presentation" class="active"><a href="#personas" aria-controls="personas" role="tab" data-toggle="tab">Personas</a></li>
                            <li role="presentation" ><a href="#empresas" aria-controls="empresas" role="tab" data-toggle="tab">Empresas</a></li>
                        </ul>
                    </div>

                    <div class="tab-content" style="padding:0;">
                        <div class="tab-pane active" id="personas">
                            <div class="box-static box-transparent box-bordered padding-30" style="border-top:0;">

                                <div class="box-title margin-bottom-30">
                                    <h2 class="lead colorDos">No estás registrado aún? (sólo personas naturales)</h2>
                                </div>

                                <form id="formRegistro" class="nomargin sky-form" action="{{ path('usuario_registro') }}" method="post" enctype="multipart/form-data">
                                    <fieldset>

                                        <div class="row">
                                            <div class="form-group">

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:rut">Rut *</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-user"></i>
                                                        <input required="" type="text" name="registro[rut]" id="registroRut">
                                                        <b class="tooltip tooltip-bottom-right">Tu Rut</b>
                                                    </label>
                                                </div>

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:nombres">Nombres *</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-user"></i>
                                                        <input required="" type="text" name="registro[nombres]" id="registroNombre">
                                                        <b class="tooltip tooltip-bottom-right">Tus Nombres</b>
                                                    </label>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group">

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:ap_pat">Apellido Paterno *</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-user"></i>
                                                        <input required="" type="text" name="registro[ap_pat]" id="registroApPat">
                                                        <b class="tooltip tooltip-bottom-right">Apellido Materno</b>
                                                    </label>
                                                </div>

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:ap_mat">Apellido Materno *</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-user"></i>
                                                        <input required="" type="text" name="registro[ap_mat]" id="registroApMat">
                                                        <b class="tooltip tooltip-bottom-right">Apellido Materno</b>
                                                    </label>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group">

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:email">Email *</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-envelope"></i>
                                                        <input required="true" type="text" name="registro[email]" id="registroEmail">
                                                        <b class="tooltip tooltip-bottom-right">Tu Email</b>
                                                    </label>
                                                </div>

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:telefono">Teléfono</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-phone"></i>
                                                        <input type="text" name="registro[telefono]" id="registroTelefono">
                                                        <b class="tooltip tooltip-bottom-right">Your Phone (optional)</b>
                                                    </label>
                                                </div>


                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:calle">Calle *</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-home"></i>
                                                        <input required="true" type="text" name="registro[calle]" id="registroCalle">
                                                        <b class="tooltip tooltip-bottom-right">Tu Email</b>
                                                    </label>
                                                </div>

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:numero">Número *</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-home"></i>
                                                        <input required="true" type="text" name="registro[numero]" id="registroNumero">
                                                        <b class="tooltip tooltip-bottom-right">Tu numero De Direccion</b>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:depa">Departamento</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-home"></i>
                                                        <input  type="text" name="registro[depa]" id="registroDepa">
                                                        <b class="tooltip tooltip-bottom-right">Tu Departamento (opcional)</b>
                                                    </label>
                                                </div>

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:region">Región *</label>
                                                    <label class="input margin-bottom-10">
                                                        <select class="form-control" required="" name="registro[region]" id="registroRegion">
                                                            <option value="" selected="selected">Región</option>
                                                            <option value="357">Metropolitana de Santiago</option>
                                                            <option value="2">Arica-Parinacota</option>
                                                            <option value="9">Iquique</option>
                                                            <option value="19">Antofagasta</option>
                                                            <option value="32">Atacama</option>
                                                            <option value="45">Coquimbo</option>
                                                            <option value="64">Valparaíso</option>
                                                            <option value="110">Libertador General Bernardo O'Higgins </option>
                                                            <option value="147">Maule</option>
                                                            <option value="182">Bío - Bío</option>
                                                            <option value="241">Araucanía</option>
                                                            <option value="276">Los Ríos</option>
                                                            <option value="291">Los Lagos</option>
                                                            <option value="326">Aysén del General Carlos Ibáñez del Campo</option>
                                                            <option value="341">Magallanes y la Antártica Chilena</option>
                                                        </select>
                                                        <b class="tooltip tooltip-bottom-right">Indica Tu Región</b>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:ciudad">Ciudad *</label>
                                                    <label class="input margin-bottom-10">
                                                        <select class="form-control" required="" name="registro[ciudad]" id="registroCiudad">
                                                            <option selected="selected">Ciudad</option>
                                                        </select>
                                                        <b class="tooltip tooltip-bottom-right">Indica tu Ciudad</b>
                                                    </label>
                                                </div>

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:comuna">Comuna *</label>
                                                    <label class="input margin-bottom-10">
                                                        <select class="form-control" required="" name="registro[comuna]" id="registroComuna">
                                                            <option selected="selected">Ciudad</option>
                                                        </select>
                                                        <b class="tooltip tooltip-bottom-right">Indica Tu Comuna</b>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group">

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:pass1">Password *</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-lock"></i>
                                                        <input required="true" type="password" class="err" name="registro[pass1]" id="registroPass1">
                                                        <b class="tooltip tooltip-bottom-right">Min. 6 caracteres</b>
                                                    </label>
                                                </div>

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registro:pass2">Verificación Password*</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-lock"></i>
                                                        <input required="true" type="password" class="err" name="registro[pass2]" id="registroPass2">
                                                        <b class="tooltip tooltip-bottom-right">Tipea El Password Nuevamente</b>
                                                    </label>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <label for="registro:archivo">Fotocopia Carnet de Identidad Ambas Caras *</label>

                                                    <!-- custom file upload -->

                                                    <input required="true" class="custom-file-upload" type="file"  name="registro[archivo]" id="archivo" data-btn-text="Seleccionar Archivo" onchange="nombre_ar(this.id);"/>
                                                    <small class="text-muted block">Max file size: 10Mb (jpeg/jpg/png/pdf)</small>

                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <label for="registro:archivo">Términos y Condiciones*</label>

                                                    <!-- custom file upload -->

                                                    <input required="true" class="custom-file-upload" type="file"  name="registro[terminos]" id="terminos" data-btn-text="Seleccionar Archivo" onchange="nombre_ar(this.id);"/>
                                                    <small class="text-muted block">Max file size: 10Mb (jpeg/jpg/png/pdf)</small>

                                                </div>
                                            </div>

                                        </div>

                                        <hr />
                                        {#<a href="{{ asset('public/assets/files/terminos_condiciones.pdf') }}" target="_blank" class="botonCompleto"><i class="ico-color ico-hover fa fa-download"></i><strong>Descargue los Términos de Servicio</strong></a>#}
                                        <a href="{{ 'data:'~verant.0.terminosTipo~';base64,'~verant.0.terminos }}" target="_blank"><i class="ico-color ico-hover fa fa-download"></i><strong>Descargue los Términos de Servicio</strong></a>
