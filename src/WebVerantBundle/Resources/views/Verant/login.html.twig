                                        <!--<label class="checkbox nomargin"><input type="checkbox" name="checkbox"><i></i>I want to receive news and  special offers</label>-->

                                    </fieldset>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-primary" id="btnRegistro" style="margin:0;"><i class="fa fa-check"></i> REGISTRAR</button>
                                        </div>
                                    </div>

                                </form>

                            </div>
                        </div>
                        <div class="tab-pane" id="empresas" style="padding:0;">
                            <div class="box-static box-transparent box-bordered padding-30" style="border-top:0;">

                                <div class="box-title margin-bottom-30">
                                    <h2 class="lead colorDos">Envíanos tus datos y un ejecutivo se comunicará contigo.</h2>
                                </div>
                                <form id="formRegistroE" class="nomargin sky-form" action="{{ path('empresa_registro') }}" method="post">
                                    <fieldset>
                                        <div class="row">
                                            <div class="form-group">

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registroE:rut">Rut *</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-user"></i>
                                                        <input required="" type="text" name="registroE[rut]" id="registroERut">
                                                        <b class="tooltip tooltip-bottom-right">Tu Rut</b>
                                                    </label>
                                                </div>

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registroE:contacto">Nombre Contacto *</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-user"></i>
                                                        <input required="" type="text" name="registroE[contacto]" id="registroEcontacto">
                                                        <b class="tooltip tooltip-bottom-right">Persona para contacto</b>
                                                    </label>
                                                </div>



                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-md-12 col-sm-12">
                                                    <label for="registroE:nombres">Razón Social *</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-user"></i>
                                                        <input required="" type="text" name="registroE[nombres]" id="registroENombre">
                                                        <b class="tooltip tooltip-bottom-right">Tus Nombres</b>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group">

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registroE:email">Email *</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-user"></i>
                                                        <input required="" type="text" name="registroE[email]" id="registroEEmail">
                                                        <b class="tooltip tooltip-bottom-right">Tu Email</b>
                                                    </label>
                                                </div>

                                                <div class="col-md-6 col-sm-6">
                                                    <label for="registroE:telefono">Teléfono *</label>
                                                    <label class="input margin-bottom-10">
                                                        <i class="ico-append fa fa-user"></i>
                                                        <input required="" type="text" name="registroE[telefono]" id="registroETelefono">
                                                        <b class="tooltip tooltip-bottom-right">Tu Teéfono</b>
                                                    </label>
                                                </div>

                                            </div>
                                        </div>
                                    </fieldset>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-primary" id="btnRegistro" style="margin:0;"><i class="fa fa-check"></i> REGISTRAR</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /REGISTER -->

                <!-- LOGIN -->
                <div class="col-md-4 col-sm-5">

                    <div class="well">
                        <div class="box-title margin-bottom-30">
                            <h2 class="lead colorDos"><strong>Ingreso a usuarios</strong></h2>
                        </div>

                        <form class="sky-form" method="post" action="{{ path('web_verant_login_access')}}" autocomplete="off">
