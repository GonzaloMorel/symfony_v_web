{% extends 'admin.html.twig' %}

{% block middle %}
    <header id="page-header">
        <h1>Usuario Persona Natural</h1>
    </header>
    <div id="content" class="padding-20">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Usuario {{ usuario.nombres ~ " "~usuario.apPat ~ " "~ usuario.apMat}}</strong>
            </div><!-- end panel-heading -->
            <div class="panel-body">
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ usuario.id }}</td>
                        </tr>
                        <tr>
                            <th>Rut</th>
                            <td>{{ usuario.rut~'-'~usuario.dv}}</td>
                        </tr>
                        <tr>
                            <th>Nombre </th>
                            <td>{{ usuario.nombres ~ ' ' ~ usuario.apPat ~ ' '~ usuario.apMat}}</td>
                        </tr>
                        <tr>
                            <th>Dirección</th>
                            <td>{{ usuario.direccion }}</td>
                        </tr>
                        <tr>
                            <th>Región</th>
                            <td>{{ usuario.region.nombrePrv }}</td>
                        </tr>
                        <tr>
                            <th>Ciudad</th>
                            <td>{{ usuario.ciudad.nombrePrv }}</td>
                        </tr>
                        <tr>
                            <th>Comuna</th>
                            <td>{{ usuario.comuna.nombrePrv }}</td>
                        </tr>
                        <tr>
                            <th>Número</th>
                            <td>{{ usuario.numero }}</td>
                        </tr>
                        <tr>
                            <th>Departamento</th>
                            <td>{{ usuario.departamento }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>
                                <a href="mailto:{{ usuario.email }}">
                                    {{ usuario.email }}
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th>Cédula de Identidad</th>
                            <td>
                                {% if usuario.imagenCiTipo %}
                                    <a href="{{ 'data:'~usuario.imagenCiTipo~';base64,'~usuario.imagenCi }}" target="_blank"><span class="fa fa-paperclip"> Descargar</span></a>
                                {% else %}
                                    {{ 'Sin Archivo' }}
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Términos</th>
                            <td>
                                {% if usuario.terminosTipo %}
                                    <a href="{{ 'data:'~usuario.terminosTipo~';base64,'~usuario.terminos }}" target="_blank"><span class="fa fa-paperclip"> Descargar</span></a>
                                {% else %}
                                    {{ 'Sin Archivo' }}
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Concentimiento</th>
                            <td>{% if usuario.concentimiento %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Teléfono</th>
                            <td>{{ usuario.telefono }}</td>
                        </tr>
                        <tr>
                            <th>Activo</th>
                            <td>{% if usuario.isActive %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Creación</th>
                            <td>{% if usuario.createdAt %}{{ usuario.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Actualización</th>
                            <td>{% if usuario.updatedAt %}{{ usuario.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                    </tbody>
                </table>
            </div><!--end panel-body -->
            <div class="panel-footer">
                <div class="btn-group"role="group">
                    {{ form_start(delete_form) }}
                    <a class="btn btn-sm btn-warning" href="{{ path('usuario_natural_index') }}">Volver</a>
                    <a class="btn btn-sm btn-info" href="{{ path('usuario_natural_edit', { 'id': usuario.id }) }}">Editar</a>
                    <input class="btn btn-sm btn-danger" type="submit" value="Eliminar">
                    {{ form_end(delete_form) }}
                </div>

            </div><!-- end panel-footer  -->
        </div><!-- end panel-default -->
    </div><!-- end content -->
{% endblock %}
