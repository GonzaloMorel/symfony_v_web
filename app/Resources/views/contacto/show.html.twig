{% extends 'admin.html.twig' %}

{% block middle %}
    <header id="page-header">
        <h1>Contactos</h1>
    </header>
    <div id="content" class="padding-20">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Contacto</strong>
            </div>
            <div class="panel-body">
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ contacto.id }}</td>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                            <td>{{ contacto.nombre }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>
                                <a href="mailto:{{ contacto.email }}">
                                    {{ contacto.email }}
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <th>Telefono</th>
                            <td>{{ contacto.telefono }}</td>
                        </tr>
                        <tr>
                            <th>Asunto</th>
                            <td>{{ contacto.asunto }}</td>
                        </tr>
                        <tr>
                            <th>Mensaje</th>
                            <td>{{ contacto.mensaje }}</td>
                        </tr>
                        <tr>
                            <th>Archivo</th>
                            <td>
                                {% if contacto.archivoTipo %}
                                    <a href="{{ 'data:'~contacto.archivoTipo~';base64,'~ contacto.archivo}}" target="_blank">
                                        <span class="fa fa-paperclip"> Archivo Adjunto</span>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Craci√≥n</th>
                            <td>{% if contacto.createdAt %}{{ contacto.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                    </tbody>
                </table>
            </div><!-- end panel-body -->
            <div class="panel-footer">
                <div class="btn-group" role="group">
                    {# form_start(delete_form) #}
                    <a class="btn btn-sm btn-warning" href="{{ path('contacto_index') }}">Volver</a>
                    {#    <a href="{{ path('contacto_edit', { 'id': contacto.id }) }}">Edit</a>
                        <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}#}
                    </li>
                </div>
            </div><!-- end panel-footer -->
        </div><!-- end panel default -->
    </div><!-- end content -->
{% endblock %}
