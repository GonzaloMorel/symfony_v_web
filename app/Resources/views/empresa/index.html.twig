{% extends 'admin.html.twig' %}

{% block middle %}
    <header id="page-header">
        <h1>Empresa</h1>
    </header>
    <div id="content" class="padding-20">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Empresas <span class="badge badge-info">{{ pagination.getTotalItemCount }}</span></strong>
            </div><!-- end panel-heading -->
            <div class="panel-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>{{ knp_pagination_sortable(pagination, 'Id', 'e.id' ) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Rut', 'e.rut' ) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Razón Social', 'e.razon_social' ) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Teléfono', 'e.telefono' ) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Email', 'e.email' ) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Activo', 'e.is_active' ) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Creación', 'e.created_at' ) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Actualización', 'e.updated_at' ) }}</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for empresa in pagination %}
                            <tr {%if (empresa.direccion == "") %}class="danger"{% endif %}>
                                <td><a href="{{ path('empresa_show', { 'id': empresa.id }) }}">{{ empresa.id }}</a></td>
                                <td>{{ empresa.rut ~'-'~empresa.dv }}</td>
                                <td>{{ empresa.razonSocial }}</td>
                                <td>{{ empresa.codigoPais ~' '~ empresa.telefono }}</td>
                                <td>{{ empresa.email }}</td>
                                <td>{% if empresa.isActive %}Yes{% else %}No{% endif %}</td>
                                <td>{% if empresa.createdAt %}{{ empresa.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if empresa.updatedAt %}{{ empresa.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-info" href="{{ path('empresa_show', { 'id': empresa.id }) }}">Ver</a>
                                        <a class="btn btn-sm btn-success" href="{{ path('empresa_edit', { 'id': empresa.id }) }}">Editar</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div><!--end panel-body -->
            <div class="panel-footer">
                <div class="btn-group" role="group">
                    <a class="btn btn-md btn-primary" href="{{ path('empresa_new') }}">Crear Empresa</a>
                </div>
            </div><!-- end panel- footer -->
        </div><!--end panel-defautl-->
    </div><!-- end content --<
{% endblock %}
