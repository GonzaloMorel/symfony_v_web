{% extends 'admin.html.twig' %}

{% block middle %}
    <header id="page-header">
        <h1>Empresa</h1>
    </header>
    <div id="content" class="padding-20">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Empresa {{ empresa.razonSocial }}</strong>
            </div><!-- end panel-heading -->
            <div class="panel-body">
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ empresa.id }}</td>
                        </tr>
                        <tr>
                            <th>Rut</th>
                            <td>{{ empresa.rut ~ ' - ' ~ empresa.dv }}</td>
                        </tr>
                        <tr>
                            <th>Razón Social</th>
                            <td>{{ empresa.razonSocial }}</td>
                        </tr>
                        <tr>
                            <th>Giro</th>
                            <td>{{ empresa.razonSocial }}</td>
                        </tr>
                        <tr>
                            <th>Teléfono</th>
                            <td>{{ empresa.codigoPais ~ ' ' ~ empresa.telefono }}</td>
                        </tr>
                        <tr>
                            <th>Región</th>
                            <td>{% if region is defined %}
                                {{ 'Sin Región' }}
                                {% else %}
                                {{ region.0.nombrePrv }}
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Ciudad</th>
                            <td>{% if ciudad is defined %}
                                {{ 'Sin Ciudad' }}
                                {% else %}
                                    {{ ciudad.0.nombrePrv }}
                                    {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Comuna</th>
                            <td>{% if comuna is defined %}
                                    {{ 'Sin Comuna' }}
                                {% else %}
                                    {{ comuna.0.nombrePrv }}
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Dirección</th>
                            <td>{{ empresa.direccion }}</td>
                        </tr>
                        <tr>
                            <th>Número</th>
                            <td>{{ empresa.numero }}</td>
                        </tr>
                        <tr>
                            <th>Departamento</th>
                            <td>{{ empresa.departamento }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ empresa.email }}</td>
                        </tr>
                        <tr>
                            <th>Activo</th>
                            <td>{% if empresa.isActive %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Creación</th>
                            <td>{% if empresa.createdAt %}{{ empresa.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Actualización</th>
                            <td>{% if empresa.updatedAt %}{{ empresa.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                    </tbody>
                </table>
            </div><!-- end panel-body -->
            <div class="panel-footer">
                <div class="btn-group" role="group">
                    {{ form_start(delete_form) }}
                    <a class=" btn btn-sm btn-warning" href="{{ path('empresa_index') }}">Volver</a>
                    <a class="btn btn-sm btn-success" href="{{ path('empresa_edit', { 'id': empresa.id }) }}">Editar</a>
                    <a class="btn btn-sm btn-primary" href="{{ path('empresa_new') }}">Crear Empresa</a>
                    <input class="btn btn-sm btn-danger" type="submit" value="Eliminar">
                    {{ form_end(delete_form) }}
                </div>
            </div><!-- end panel-footer -->
        </div><!-- end panel-default -->
    </div><!-- end content -->
{% endblock %}
