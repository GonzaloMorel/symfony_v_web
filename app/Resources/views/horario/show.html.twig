{% extends 'admin.html.twig' %}

{% block middle %}
    <header id="page-header">
        <h1>Horario</h1>
    </header>
    <div id="content" class="padding-20">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Horario {{ horario.dias }}</strong>
            </div><!-- end panel-heading -->
            <div class="panel-body">
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ horario.id }}</td>
                        </tr>
                        <tr>
                            <th>Días</th>
                            <td>{{ horario.dias }}</td>
                        </tr>
                        <tr>
                            <th>Horario Inicio</th>
                            <td>{% if horario.horaDesde %}{{ horario.horaDesde|date('H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Horario Término</th>
                            <td>{% if horario.horaHasta %}{{ horario.horaHasta|date('H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Activo</th>
                            <td>{% if horario.isActive %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Creación</th>
                            <td>{% if horario.createdAt %}{{ horario.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Actualización</th>
                            <td>{% if horario.updatedAt %}{{ horario.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                    </tbody>
                </table>
            </div><!-- end panel-body -->
            <div class="panel-footer">
                <div class="btn-group" role="group">
                        {{ form_start(delete_form) }}
                        <a class="btn btn-sm btn-warning" href="{{ path('horario_index') }}">Volver</a>
                        <a class="btn btn-sm btn-success" href="{{ path('horario_edit', { 'id': horario.id }) }}">Editar</a>
                        <a class="btn btn-sm btn-primary" href="{{ path('horario_new') }}">Crear Horario</a>
                        <input class="btn btn-sm btn-danger" type="submit" value="Eliminar">
                        {{ form_end(delete_form) }}

                </div>
            </div><!-- end panel-footer -->
        </div><!-- end panel-default -->
    </div><!-- end content -->
{% endblock %}
