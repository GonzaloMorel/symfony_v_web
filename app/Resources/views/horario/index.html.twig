{% extends 'admin.html.twig' %}

{% block middle %}
    <header id="page-header">
        <h1>Horario</h1>
    </header>
    <div id="content" class="padding-20">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong>Horarios <span class="badge badge-info">{{ pagination.getTotalItemCount }}</span></strong>
            </div><!-- end panel-heading -->
            <div class="panel-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>{{ knp_pagination_sortable(pagination, 'Id', 'h.id' ) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Días', 'h.id' ) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Horario Inicio', 'h.hora_desde' ) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Hora Término', 'h.hora_hasta' ) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Activo', 'h.is_active' ) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Creación', 'h.created_at' ) }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Actualización', 'h.updated_at' ) }}</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for horario in pagination %}
                            <tr>
                                <td><a href="{{ path('horario_show', { 'id': horario.id }) }}">{{ horario.id }}</a></td>
                                <td>{{ horario.dias }}</td>
                                <td>{% if horario.horaDesde %}{{ horario.horaDesde|date('H:i:s') }}{% endif %}</td>
                                <td>{% if horario.horaHasta %}{{ horario.horaHasta|date('H:i:s') }}{% endif %}</td>
                                <td>{% if horario.isActive %}Yes{% else %}No{% endif %}</td>
                                <td>{% if horario.createdAt %}{{ horario.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if horario.updatedAt %}{{ horario.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-success" href="{{ path('horario_show', { 'id': horario.id }) }}">Ver</a>
                                        <a class="btn btn-sm btn-info" href="{{ path('horario_edit', { 'id': horario.id }) }}">Editar</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {# display navigation #}
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div><!-- end panel-body -->
            <div class="panel-footer">
                <a class="btn btn-md btn-primary" href="{{ path('horario_new') }}">Crear Horario</a>
            </div><!-- end panel-footer -->
        </div><!-- end panel-default-->
    </div><!-- end content -->
{% endblock %}
